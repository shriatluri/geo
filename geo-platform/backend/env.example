# =================================
# GEO Platform Backend Environment
# =================================

# Server Configuration
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# =================================
# Database Configuration (Supabase)
# =================================

# Supabase PostgreSQL connection
# Get these from your Supabase project settings > Database > Connection string
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Direct URL (for migrations)
# Get this from your Supabase project settings > Database > Connection string > Direct connection
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Project Configuration
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =================================
# Redis Configuration
# =================================

# Redis connection (can use Supabase Redis addon or external service)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =================================
# AI API Keys
# =================================

# OpenAI API configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key

# =================================
# Job Queue Configuration
# =================================

# BullMQ/Redis job queue settings
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# =================================
# Security Configuration
# =================================

# JWT secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS settings
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
